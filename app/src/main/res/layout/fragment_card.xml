<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/main_layout_margin_top"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context=".main.CardFragment">

    <ImageButton
        android:id="@+id/arrow_left"
        style="@style/main_card_arrow"
        android:layout_width="@dimen/arrow_width"
        android:layout_height="@dimen/arrow_height"
        android:layout_marginStart="@dimen/arrow_margin_to_screen_side"
        android:layout_marginLeft="@dimen/arrow_margin_to_screen_side"
        app:layout_constraintBottom_toBottomOf="@+id/card_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_image" />

    <ImageView
        android:id="@+id/card_image"
        android:layout_width="@dimen/card_image_width"
        android:layout_height="@dimen/card_image_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/arrow_right"
        style="@style/main_card_arrow"
        android:layout_width="@dimen/arrow_width"
        android:layout_height="@dimen/arrow_height"
        android:layout_marginEnd="@dimen/arrow_margin_to_screen_side"
        android:layout_marginRight="@dimen/arrow_margin_to_screen_side"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@+id/card_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_image" />

    <LinearLayout
        android:id="@+id/dot_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dot_container_margin_height"
        android:layout_marginTop="@dimen/dot_container_margin_top"
        android:layout_marginBottom="@dimen/dot_container_margin_bottom"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_image" >

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/available_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/available_container_height"
        android:paddingHorizontal="@dimen/container_padding_horizontal"
        app:layout_constraintTop_toBottomOf="@id/dot_container">

        <TextView
            android:id="@+id/main_available_label"
            android:layout_width="@dimen/available_label_width"
            android:layout_height="@dimen/available_label_height"
            android:layout_marginTop="@dimen/available_label_margin_top"
            android:text="@string/main_available_label"
            android:textColor="@color/status_blue"
            android:textSize="@dimen/available_label_text_size"
            app:fontFamily="Roboto-Regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/main_available_value"
            android:layout_width="@dimen/available_value_width"
            android:layout_height="@dimen/available_value_height"
            android:gravity="end"
            android:textColor="@color/status_blue"
            android:textSize="@dimen/available_value_text_size"
            app:fontFamily="Roboto-Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/available_chart_orange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/available_chart_orange_height"
            android:layout_marginTop="@dimen/available_chart_orange_margin_top"
            android:background="@color/orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_available_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/current_balance_container"
        style="@style/main_card_detail_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_container_height"
        app:layout_constraintTop_toBottomOf="@id/available_container">

        <TextView
            android:id="@+id/current_balance_label"
            style="@style/detail_label"
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="@dimen/detail_label_height"
            android:text="@string/label_current_balance"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/current_balance_currency"
            style="@style/currency"
            android:layout_width="@dimen/detail_currency_width"
            android:layout_height="@dimen/detail_currency_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/current_balance_label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/current_balance_value"
            style="@style/detail_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/min_payment_container"
        style="@style/main_card_detail_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_container_height"
        app:layout_constraintTop_toBottomOf="@id/current_balance_container">

        <TextView
            android:id="@+id/min_payment_label"
            style="@style/detail_label"
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="@dimen/detail_label_height"
            android:text="@string/label_min_payment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/min_payment_currency"
            style="@style/currency"
            android:layout_width="@dimen/detail_currency_width"
            android:layout_height="@dimen/detail_currency_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/min_payment_label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/min_payment_value"
            style="@style/detail_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/due_date_container"
        style="@style/main_card_detail_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_container_height"
        app:layout_constraintTop_toBottomOf="@id/min_payment_container">

        <TextView
            android:id="@+id/due_date_label"
            style="@style/detail_label"
            android:layout_width="@dimen/detail_label_width"
            android:layout_height="@dimen/detail_label_height"
            android:text="@string/label_due_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/due_date_value"
            style="@style/detail_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/details_button"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:text="@string/button_details"
        style="@style/button_details"
        android:background="@drawable/details_btn_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/due_date_container" />

</androidx.constraintlayout.widget.ConstraintLayout>

