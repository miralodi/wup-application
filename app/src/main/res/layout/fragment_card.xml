<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/main_layout_margin_top"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context=".main.CardFragment">

    <ImageButton
        android:id="@+id/arrow_left"
        style="@style/main_card_arrow"
        android:layout_width="@dimen/arrow_width"
        android:layout_height="@dimen/arrow_height"
        android:layout_marginStart="@dimen/arrow_margin_to_screen_side"
        android:layout_marginLeft="@dimen/arrow_margin_to_screen_side"
        app:layout_constraintBottom_toBottomOf="@+id/card_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_image" />

    <ImageView
        android:id="@+id/card_image"
        android:layout_width="@dimen/card_image_width"
        android:layout_height="@dimen/card_image_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/arrow_right"
        style="@style/main_card_arrow"
        android:layout_width="@dimen/arrow_width"
        android:layout_height="@dimen/arrow_height"
        android:layout_marginEnd="@dimen/arrow_margin_to_screen_side"
        android:layout_marginRight="@dimen/arrow_margin_to_screen_side"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="@+id/card_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_image" />

</androidx.constraintlayout.widget.ConstraintLayout>

